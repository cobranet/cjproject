<% content_for :table do %>
 <%= render partial: "table"%>
<%end%>

<% content_for :userstat do %>
  <%= render partial: "userstat" %>  
<%end%>

<% content_for :userinfo do %>
  <% if current_user %>	
    <div id="userinfo"> 
      <%= image_tag current_user.image %> 
      <%= current_user.name %>
    </div>
    <ul class="nav nav-pills nav-stacked">
      <li class="active">
        <%= link_to "Home", games_path %> 
     </li>
      <li class="active">
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
     </li>
   </ul>
 
  <%end%>
<%end%>

<% content_for :diceboard do%>
  <% if @jamb.diceboard.mode != :end_game %>   
    <div id='diceboard'>
      <%= render partial: "dices" %><br/><br/>
      <span id="roll_buttons">
        <%= render partial: "buttons" %>
      </span>
    </div>
  <% else %>
      <%= render partial: "end_game" %>
  <% end %>
<%end%>

